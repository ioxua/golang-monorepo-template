{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@nx-go/nx-go"],
  "neverConnectToCloud": true,
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "go": {
      "runner": "@nx-go/nx-go",
      "options": {
        "useGoWork": true
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/go.mod"],
    "production": ["default"]
  },
  "useInferencePlugins": false,
  "defaultBase": "main"
}
